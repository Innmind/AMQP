{
    "name": "innmind/amqp",
    "type": "library",
    "description": "AMQP client",
    "keywords": ["amqp"],
    "homepage": "http://github.com/Innmind/AMQP",
    "license": "MIT",
    "authors": [
        {
            "name": "Baptiste Langlade",
            "email": "baptiste.langlade@hey.com"
        }
    ],
    "support": {
        "issues": "http://github.com/Innmind/AMQP/issues"
    },
    "require": {
        "php": "~8.1",
        "innmind/immutable": "~3.5",
        "innmind/time-continuum": "~2.0",
        "innmind/math": "~5.0",
        "innmind/url": "~3.3",
        "ramsey/uuid": "~3.7|~4.0",
        "innmind/operating-system": "~2.0",
        "innmind/media-type": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Innmind\\AMQP\\": "src/"
        },
        "files": ["src/bootstrap.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Innmind\\AMQP\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~9.0",
        "psr/log": "^1.0",
        "innmind/cli": "~2.0",
        "vimeo/psalm": "~4.4",
        "innmind/black-box": "^4.9",
        "innmind/coding-standard": "^1.1"
    },
    "suggest": {
        "psr/log": "To log what's happening through the connection",
        "innmind/cli": "To talk to an amqp server through the cli"
    }
}
